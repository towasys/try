{
	"$schema": "https://biomejs.dev/schemas/1.6.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "asNeeded",
			"lineWidth": 240
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"ignore": [],
		"indentWidth": 2,
		"indentStyle": "space",
		"lineWidth": 240
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	}
}
